#include <bits/stdc++.h>
using namespace std;

int ContarLetraA(string f){
int contarA = 0;
for (int i=0;i<f.size();i++) {
    if (f[i] == 'A' || f[i] == 'a') contarA++;
    }
    return contarA;
}
int main(){
    ios::sync_with_stdio(0);
    cin.tie(0); cout.tie(0);
    string f; cout << "ingrese una frase" << endl;
    getline(cin,f);
    cout << ContarLetraA(f) << endl;
    return 0;
}
